{
  "manifest_version": 3,
  "name": "FocusTube (MVP)",
  "version": "0.1.0",
  "description": "Blocks Shorts, limits search binges, and tracks YouTube usage for focus.",
  
  "permissions": ["storage"], 

  "externally_connectable": {
    "matches": [
      "https://focustube-beta.vercel.app/*",
      "http://localhost:5173/*",
      "http://localhost:3000/*"
    ]
  },

  "host_permissions": [
    "*://*.youtube.com/*",
    "https://focustube-backend-4xah.onrender.com/*"
  ],

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/content.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://focustube-beta.vercel.app/*",
        "http://localhost:5173/*",
        "http://localhost:3000/*"
      ],
      "js": ["content/website-bridge.js"],
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_title": "FocusTube",
    "default_popup": "popup.html"
  }
}
