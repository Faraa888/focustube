{
  "manifest_version": 3,
  "name": "FocusTube (MVP)",
  "version": "0.1.0",
  "description": "Blocks Shorts, limits search binges, and tracks YouTube usage for focus.",
  
  "permissions": ["storage"], 

  "host_permissions": [
    "*://*.youtube.com/*",
    "http://localhost:3000/*"
  ],

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/content.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_title": "FocusTube"
  }
}
